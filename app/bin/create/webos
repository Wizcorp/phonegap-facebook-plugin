# root = open('./tmp/webos/root.html','w')
# root.write(str(soup))
# root.close()
    # write the content
# main = open('./tmp/webos/app/views/main/main-scene.html','w')
# main.write(body)
# main.close()
    # write appinfo.json
    # write sources.json


if __name__ == "__main__":
    main()